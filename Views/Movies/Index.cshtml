@model IEnumerable<FreeWheel.Models.Movie>

@{
  ViewData["Title"] = "Index";
}

<h2>Index</h2>

<p>
  <a asp-action="Create">Create New</a>
</p>
<table class="table">
  <thead>
    <tr>
      <th>
        @Html.DisplayNameFor(model => model.Title)
      </th>
      <th>
        @Html.DisplayNameFor(model => model.YearOfRelease)
      </th>
      <th>
        @Html.DisplayNameFor(model => model.Genre)
      </th>
      <th>
        Average Rating
      </th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    @foreach (var item in Model)
    {
      <tr>
        <td>
          @Html.DisplayFor(modelItem => item.Title)
        </td>
        <td>
          @item.YearOfRelease.Year
        </td>
        <td>
          @Html.DisplayFor(modelItem => item.Genre)
        </td>
        <td>
          @item.GetAverageRating().ToString()
        </td>
        <td>
          <a asp-action="Edit" asp-route-id="@item.UID">Edit</a> |
          <a asp-action="Details" asp-route-id="@item.UID">Details</a> |
          <a asp-action="Delete" asp-route-id="@item.UID">Delete</a>
        </td>
      </tr>
    }
  </tbody>
</table>
